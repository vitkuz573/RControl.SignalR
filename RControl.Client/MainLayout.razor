@inherits LayoutComponentBase
@using Blazorise
@using Blazorise.Icons.FontAwesome
@using Blazorise.Tailwind

<Blazorise.Tailwind.Bar Background="Background.Transparent" Class="shadow-lg fixed w-full z-50 backdrop-filter backdrop-blur-lg bg-opacity-60 bg-white py-3">
    <Container Class="flex justify-between items-center">
        <Blazorise.Tailwind.BarStart>
            <BarBrand>
                <Text Color="Color.Dark" Class="text-2xl font-bold">RControl</Text>
            </BarBrand>
        </Blazorise.Tailwind.BarStart>
        <Blazorise.Tailwind.BarEnd>
            <Blazorise.Tailwind.BarItem>
                <Blazorise.Tailwind.BarLink Class="text-lg font-medium text-blue-600 hover:text-blue-800">Home</Blazorise.Tailwind.BarLink>
            </Blazorise.Tailwind.BarItem>
            <Blazorise.Tailwind.BarItem>
                <Blazorise.Tailwind.BarLink Class="text-lg font-medium text-blue-600 hover:text-blue-800">Settings</Blazorise.Tailwind.BarLink>
            </Blazorise.Tailwind.BarItem>
        </Blazorise.Tailwind.BarEnd>
    </Container>
</Blazorise.Tailwind.Bar>

<main class="container mx-auto px-4 mt-1 pt-20">
    @Body
</main>

<footer class="bg-gray-900 text-white mt-8 py-3 fixed bottom-0 w-full">
    <Container>
        <Row>
            <Column ColumnSize="ColumnSize.Is6">
                <span class="text-sm">© 2023 RControl</span>
            </Column>
            <Column ColumnSize="ColumnSize.Is6">
                <Text Alignment="TextAlignment.Right" Class="text-sm">Powered by Blazor &amp; Blazorise</Text>
            </Column>
        </Row>
    </Container>
</footer>
